<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/feed_detail_header"/>


    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/seperator_color"
    />

    <com.linute.linute.UtilsAndHelpers.ClickableSquareFrameLayout android:id="@+id/video_frame"
                                                                  android:layout_width="match_parent"
                                                                  android:layout_height="wrap_content"
    >

        <com.linute.linute.SquareCamera.SquareImageView android:id="@+id/feedDetail_event_image"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/seperator_color"
                                                        android:scaleType="fitCenter"
                                                        android:src="@drawable/image_loading_background"/>

        <com.linute.linute.UtilsAndHelpers.VideoClasses.SquareVideoView
            android:id="@+id/feed_detail_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
        />


        <ImageView android:id="@+id/cinema_icon"
                   android:layout_width="64dp"
                   android:layout_height="64dp"
                   android:layout_gravity="center"
                   android:layout_margin="@dimen/activity_horizontal_margin"
                   android:src="@drawable/ic_cinema"/>


        <View android:id="@+id/feed_detail_hidden_animation"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:alpha="0.3"
              android:background="#EA294C"
              android:visibility="invisible"/>

    </com.linute.linute.UtilsAndHelpers.ClickableSquareFrameLayout>

    <include layout="@layout/feed_detail_action_bar"/>

</LinearLayout>