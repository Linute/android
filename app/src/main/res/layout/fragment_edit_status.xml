<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContent.Settings.EditNameFragment"
    android:contextClickable="false">


    <EditText
        android:id="@+id/editstatus_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:hint="@string/bio_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:singleLine="false"
        android:lines="3"
        android:maxLength="200"
        android:maxLines="3"
        android:textSize="@dimen/header_font_size"/>



    <Button android:id="@+id/editstatus_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Save Changes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/editstatus_save"
        android:textColor="@color/fifty_black"
        tools:text="200"
        android:textSize="20sp"
        android:padding="12dp"
        android:id="@+id/text_char_count" />

    <ProgressBar
        android:id="@+id/editstatus_progressbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
