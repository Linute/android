<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/feedDetail_profile_image"
            android:layout_width="@dimen/feed_profile_image_radius"
            android:layout_height="@dimen/feed_profile_image_radius"
            android:layout_centerHorizontal="true"
            app:border_color="@color/fifty_black"
            app:border_width="1dp"/>

        <TextView android:id="@+id/feedDetail_time_stamp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentTop="true"
                  android:textColor="@color/fifty_black"
                  android:singleLine="true"
                  android:textSize="@dimen/body_font_size"
                  tools:text="1m"
            />
    </RelativeLayout>

    <TextView android:id="@+id/feedDetail_user_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginEnd="32dp"
              android:layout_marginStart="32dp"
              android:singleLine="true"
              android:textColor="@color/user_name_blue"
              android:textSize="@dimen/header_font_size"
              tools:text="John Snow"/>
</LinearLayout>