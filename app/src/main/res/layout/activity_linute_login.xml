<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.linute.linute.LoginAndSignup.LinuteLoginActivity">

    <LinearLayout
        android:id="@+id/signin_email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/signin_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"/>


        <EditText
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/signin_email_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"/>


    </LinearLayout>


    <Button
        android:id="@+id/signin_signin_button"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_email_login_form"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/action_sign_in_short"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/signin_progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_email_login_form"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
