<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pure_black"
                android:focusableInTouchMode="true">


    <RelativeLayout android:id="@+id/tool_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize">

        <android.support.v7.widget.Toolbar android:id="@+id/edit_photo_toolbar"
                                           android:layout_width="match_parent"
                                           android:layout_height="?android:attr/actionBarSize"
                                           android:background="@color/colorPrimary"
                                           android:theme="@style/ThemeOverlay.AppCompat.Dark"/>



            <ImageButton
                android:id="@+id/save_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_action_check83"/>
    </RelativeLayout>

    <com.linute.linute.UtilsAndHelpers.VideoClasses.TextureVideoView android:id="@+id/video_frame"
                                                                     android:layout_width="match_parent"
                                                                     android:layout_height="wrap_content"
                                                                     android:layout_alignParentEnd="true"
                                                                     android:layout_alignParentStart="true"
                                                                     android:layout_below="@id/tool_bar_container"/>


    <com.linute.linute.UtilsAndHelpers.SquareFrameLayout android:id="@+id/square_videoFrame"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:layout_below="@id/tool_bar_container"
    >

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_cinema"
                   android:layout_gravity="center"
                   android:id="@+id/play_icon"/>
        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

    <LinearLayout android:id="@+id/button_layer"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/colorPrimary"
                  android:layout_below="@id/square_videoFrame"
                  android:gravity="center"
                  android:weightSum="8">


        <com.linute.linute.UtilsAndHelpers.SquareCheckbox android:id="@+id/anon_comments"
                                                          android:layout_width="0px"
                                                          android:layout_height="match_parent"
                                                          android:layout_margin="8dp"
                                                          android:layout_weight="1"
                                                          android:background="@drawable/turn_anon_comments_off"
                                                          android:button="@null"
                                                          android:checked="true"
        />

        <View android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="2"/>


        <com.linute.linute.UtilsAndHelpers.SquareCheckbox android:id="@+id/anon_post"
                                                          android:layout_width="0px"
                                                          android:layout_height="match_parent"
                                                          android:layout_marginEnd="16dp"
                                                          android:layout_marginStart="16dp"
                                                          android:layout_weight="1"
                                                          android:background="@drawable/post_as_anon_checkbox"
                                                          android:button="@null"/>

    </LinearLayout>


</RelativeLayout>