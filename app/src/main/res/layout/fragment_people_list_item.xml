<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/people_user_image"
        android:layout_width="@dimen/profilefragment_list_item_profile_radius"
        android:layout_height="@dimen/profilefragment_list_item_profile_radius"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:border_width="1dp"
        app:border_color="@android:color/black"
        android:alpha="0.5"
        />

    <ImageView
        android:id="@+id/list_people_image_state"
        android:layout_width="@dimen/profilefragment_list_item_profile_radius"
        android:layout_height="@dimen/profilefragment_list_item_profile_radius"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/add_friend"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/people_user_image"
        android:layout_toStartOf="@id/list_people_image_state"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/user_name_color"
            android:textStyle="bold"
            tools:text="NAME"/>

        <TextView
            android:id="@+id/list_people_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:singleLine="true"
            tools:text="Last online"/>

    </LinearLayout>


</RelativeLayout>