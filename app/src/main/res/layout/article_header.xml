<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textColor="@color/pure_black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:text="Sasha Obama Has a Big Announcement"
        />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_title"
        android:fontFamily="sans-serif-condensed"

        android:gravity="center_vertical|left"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:text="Authorrrrrrrr"
        android:textColor="@color/user_name_blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_author"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/text_author"

        android:layout_below="@id/text_title"
        android:fontFamily="sans-serif-condensed"

        android:gravity="center_vertical|right"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:textColor="#ffa5a5a5"
        android:textSize="14sp"
        tools:text="Dateeeeeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text_author"
        android:padding="4dp">
        <com.linute.linute.UtilsAndHelpers.ToggleImageView
            android:id="@+id/icon_like"
            android:layout_width="@dimen/article_header_icon_radius"
            android:layout_height="@dimen/article_header_icon_radius"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_fire"
            />
        <TextView
            android:id="@+id/text_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="10"
            android:padding="8dp"
            />
        <ImageView
            android:id="@+id/icon_comment"
            android:layout_width="@dimen/article_header_icon_radius"
            android:layout_height="@dimen/article_header_icon_radius"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_comment" />
        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="28"
            android:padding="8dp"
            />
    </LinearLayout>

</RelativeLayout>