<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/editgender_toolbar"
             layout="@layout/tool_bar"/>


    <Spinner
        android:id="@+id/editgender_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editgender_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="75dp"
        android:gravity="center"/>


    <Button android:id="@+id/editgender_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Save Changes"/>

    <ProgressBar
        android:id="@+id/editgender_progressbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editgender_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:visibility="gone"/>

</RelativeLayout>
