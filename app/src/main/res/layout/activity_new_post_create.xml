<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainContent.PostCreatePage">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar android:id="@+id/postContentToolbar"
                                           android:layout_width="match_parent"
                                           android:layout_height="?attr/actionBarSize"
                                           android:background="@color/colorPrimary"
                                           android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
        >

            <ImageView android:id="@+id/create_page_post_button"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:src="@drawable/ic_action_check83"
            />

            <ProgressBar android:id="@+id/create_page_progress_bar"
                         style="?android:attr/progressBarStyleSmall"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:visibility="gone"
            />
        </RelativeLayout>

    </RelativeLayout>

    <com.linute.linute.UtilsAndHelpers.SquareFrameLayout android:id="@+id/post_create_frame"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:background="#FFFFFF"
                                                         android:focusableInTouchMode="true">

        <com.linute.linute.UtilsAndHelpers.CustomBackPressedEditText
            android:id="@+id/post_create_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Enter your text here"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
            android:maxLines="8"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="italic"
        />


    </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:baselineAligned="false"
                  android:weightSum="6"
    >

        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout android:id="@+id/post_create_0"
                                                             android:layout_width="0px"
                                                             android:layout_height="wrap_content"
                                                             android:layout_margin="@dimen/post_create_button_space"
                                                             android:layout_weight="1"
                                                             android:background="@drawable/post_color_0">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="T"
                      android:textColor="#000000"
                      android:textSize="25sp"
            />
        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
            android:id="@+id/post_create_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/post_create_button_space"
            android:layout_weight="1"
            android:background="@drawable/post_color_1"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="A"
                      android:textColor="#FFFFFF"
                      android:textSize="25sp"
            />
        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
            android:id="@+id/post_create_2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/post_create_button_space"
            android:layout_weight="1"
            android:background="@drawable/post_color_2"
        >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="P"
                      android:textColor="#FFFFFF"
                      android:textSize="25sp"
            />

        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
            android:id="@+id/post_create_3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/post_create_button_space"
            android:layout_weight="1"
            android:background="@drawable/post_color_3">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="T"
                      android:textColor="#FFFFFF"
                      android:textSize="25sp"
            />

        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>


        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
            android:id="@+id/post_create_4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/post_create_button_space"
            android:layout_weight="1"
            android:background="@drawable/post_color_4"
        >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="I"
                      android:textColor="#FFFFFF"
                      android:textSize="25sp"
            />

        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

        <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
            android:id="@+id/post_create_5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/post_create_button_space"
            android:layout_weight="1"
            android:background="@drawable/post_color_5"
        >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="N"
                      android:textColor="#FFFFFF"
                      android:textSize="25sp"
            />

        </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="horizontal"
                  android:weightSum="8">

        <com.linute.linute.UtilsAndHelpers.SquareCheckbox android:id="@+id/anon_comments"
                                                          android:layout_width="0px"
                                                          android:layout_height="match_parent"
                                                          android:layout_margin="8dp"
                                                          android:layout_weight="1"
                                                          android:background="@drawable/turn_anon_comments_off"
                                                          android:button="@null"
                                                          android:checked="true"
        />

        <View android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="2"/>


        <com.linute.linute.UtilsAndHelpers.SquareCheckbox android:id="@+id/anon_post"
                                                          android:layout_width="0px"
                                                          android:layout_height="match_parent"
                                                          android:layout_margin="8dp"
                                                          android:layout_weight="1"
                                                          android:background="@drawable/post_as_anon_checkbox"
                                                          android:button="@null"
        />

    </LinearLayout>


</LinearLayout>