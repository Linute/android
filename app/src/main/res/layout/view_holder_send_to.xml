<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="horizontal">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="@dimen/profile_image_radius"
        android:layout_height="@dimen/profile_image_radius"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:riv_border_color="@color/seperator_color"
        app:riv_border_width="1px"
        app:riv_corner_radius="4dp"
        tools:src="@drawable/ic_anon"
    />

    <TextView
        android:id="@+id/name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/eighty_black"
        android:textSize="@dimen/header_font_size"
        tools:text="Mike Hunt Smells Bad (VERY VERY BAD)"
    />


    <com.linute.linute.UtilsAndHelpers.ToggleImageView
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/send_to_checkbox_off"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

</LinearLayout>