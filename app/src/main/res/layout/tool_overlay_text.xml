<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText
        android:id="@+id/text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/pure_white"
        tools:text="Top Text"
        android:background="#CC173856"
        android:layout_alignParentTop="true"
        android:nextFocusDown="@+id/text_bot"
        android:inputType="none"
        />

    <EditText
        android:id="@id/text_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/pure_white"
        tools:text="Bottom Text"
        android:background="#CC173856"
        android:layout_alignParentBottom="true"
        android:inputType="none"
        />

    <TextView
        android:id="@+id/text_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:gravity="center"
        android:textColor="@color/pure_white"
        android:padding="4dp"
        android:textSize="14sp"
        />

    <com.linute.linute.UtilsAndHelpers.CustomBackPressedEditText
        android:id="@+id/edit_text_mid"
        android:gravity="center"
        android:background="#CC000000"
        android:textColor="@color/pure_white"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="14sp"
        />



</RelativeLayout>