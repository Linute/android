<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="4dp"
    android:background="@drawable/global_item_background"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        tools:src="@color/seperator_color"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:shadowColor="#59000000"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textAllCaps="true"
        android:textColor="@color/pure_white"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="BACK TO SCHOOL"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/half_margin"
        android:orientation="horizontal"
    >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_book"
        />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="214"
            android:textColor="@color/pure_white"
            android:textSize="14sp"/>


        <Space
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="bloomberg"
            android:textColor="@color/pure_white"
            android:textSize="14sp"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginEnd="@dimen/half_margin"
        android:drawableStart="@drawable/ic_action_av_play_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/pure_white"
        android:textSize="14sp"
        tools:text="2:32"
    />


</FrameLayout>