<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linute.linute.MainContent.Settings.EditNameActivity">

    <include android:id="@+id/editstatus_toolbar"
             layout="@layout/tool_bar"/>



        <EditText
            android:id="@+id/editstatus_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_below="@id/editstatus_toolbar"
            android:gravity="center"
            android:hint="@string/bio_hint"
            android:inputType="textCapSentences"
            android:lines="3"
            android:maxLength="60" android:maxLines="3" android:textSize="14sp"/>


    <Button android:id="@+id/editstatus_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Save Changes"/>


    <ProgressBar
        android:id="@+id/editstatus_progressbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
