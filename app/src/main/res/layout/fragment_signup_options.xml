<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:background="@color/colorPrimary">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top"
                  android:layout_marginTop="64dp"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="@string/app_name"
                  android:textAllCaps="true"
                  android:textColor="@color/secondaryColor"
                  android:textSize="64sp"
                  android:textStyle="bold"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="@dimen/title_margin"
                  android:layout_marginRight="@dimen/title_margin"
                  android:gravity="center"
                  android:text="You are about to enter an exclusive campus feed"
                  android:textColor="#FFFFFF"
                  android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:orientation="vertical"
                  android:weightSum="2">

        <Button android:id="@+id/preLogin_facebook_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/facebook_blue"
                android:foreground="?android:selectableItemBackground"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="sign up with Facebook"
                android:textColor="@color/pure_white"
                android:textStyle="bold"
        />

        <Button
            android:id="@+id/prelogin_linute_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:background="@color/trans_secondary"
            android:foreground="?android:selectableItemBackground"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="sign up with email"
            android:textColor="@color/pure_white"
            android:textStyle="bold"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/fifty_white"
                android:textSize="@dimen/header_font_size"
            />

            <TextView
                android:id="@+id/log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Log in"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/header_font_size"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/legal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/fifty_white"
            tools:text="By clicking this you agree to the following blah blah blah blah blah"
        />

    </LinearLayout>

</FrameLayout>