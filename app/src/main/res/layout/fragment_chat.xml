<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar android:id="@+id/chat_fragment_toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="@color/colorPrimary"
                                       android:elevation="4dp"
                                       android:theme="@style/ThemeOverlay.AppCompat.Dark"
    />


    <LinearLayout android:id="@+id/message_container"
                  android:layout_width="match_parent"
                  android:layout_height="48dp"
                  android:layout_alignParentBottom="true"
                  android:background="@color/pure_white">


        <ImageView android:id="@+id/attach"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="4dp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/ic_upload_picture"
        />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/prompt_message"
            android:inputType="textCapSentences|textShortMessage|textMultiLine"
            android:maxLines="3"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:singleLine="false"
            android:textSize="@dimen/body_font_size"
        />

        <ImageView android:id="@+id/send_button"
                   android:layout_width="56dp"
                   android:layout_height="48dp"
                   android:layout_gravity="bottom|end"
                   android:alpha="0.25"
                   android:background="?attr/selectableItemBackground"
                   android:paddingStart="12dp"
                   android:paddingEnd="12dp"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:scaleType="fitCenter"
                   android:src="@drawable/icon_send"
        />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/message_container"
        android:layout_below="@id/chat_fragment_toolbar"
        android:layout_weight="1"
        android:background="#2b3139"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"/>


    <TextView android:id="@+id/empty_view_messanger"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="No message history."
              android:textColor="@color/pure_white"
              android:visibility="gone"/>

    <ProgressBar android:id="@+id/chat_load_progress"
                 style="?android:attr/progressBarStyleLarge"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:visibility="gone"
    />


</RelativeLayout>
