<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_chat_check_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/crop__ic_cancel"/>

        <ImageView
            android:id="@+id/new_chat_check_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/submit"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/new_chat_user_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_user"
            card_view:border="false"
            card_view:border_width="0dp"
            card_view:shadow="false"
            card_view:shadow_color="#8BC34A"
            card_view:shadow_radius="0"/>

        <TextView
            android:id="@+id/new_chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/new_chat_text_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your message..."
        android:minHeight="100dp"/>

</LinearLayout>