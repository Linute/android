<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView android:id="@+id/collegePicker_search_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_margin="@dimen/activity_horizontal_margin"
               android:src="@drawable/ic_action_action_search"/>

    <ImageView android:id="@+id/collegePicker_add_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:padding="@dimen/activity_horizontal_margin"
               android:src="@drawable/ic_action_content_add"/>

    <TextView android:id="@+id/collegePicker_item_name_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toEndOf="@id/collegePicker_search_icon"
              android:layout_toStartOf="@id/collegePicker_add_icon"
              android:singleLine="true"
              tools:text="Baruch College"
        />


</RelativeLayout>