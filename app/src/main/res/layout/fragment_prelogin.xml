<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="@color/fifty_black">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="80dp"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="WELCOME TO"
                  android:textColor="#FFFFFF"
                  android:textSize="18sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tapt"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="@dimen/title_margin"
                  android:layout_marginRight="@dimen/title_margin"
                  android:gravity="center"
                  android:text="Find out what is happenning on your college campus!"
                  android:textColor="#FFFFFF"
                  android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:weightSum="2">

        <ImageView android:id="@+id/preLogin_facebook_login"
                   android:layout_width="0px"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:scaleType="centerCrop"
                   android:src="@drawable/facebook_login_button"
                   android:layout_gravity="bottom"
            />

        <ImageView
            android:id="@+id/prelogin_linute_login"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/tapt_login_button"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>