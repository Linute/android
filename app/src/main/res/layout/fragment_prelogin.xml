<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:background="@color/colorPrimary">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top"
                  android:layout_marginTop="64dp"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="@string/app_name"
                  android:textAllCaps="true"
                  android:textColor="@color/secondaryColor"
                  android:textSize="64sp"
                  android:textStyle="bold"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="@dimen/title_margin"
                  android:layout_marginRight="@dimen/title_margin"
                  android:gravity="center"
                  android:text="You are about to enter an exclusive campus feed"
                  android:textColor="#FFFFFF"
                  android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:orientation="vertical"
                  android:weightSum="2">

        <Button android:id="@+id/preLogin_facebook_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/facebook_blue"
                android:foreground="?android:selectableItemBackground"
                android:padding="28dp"
                android:textStyle="bold"
                android:text="Facebook"
                android:textColor="@color/pure_white"
        />

        <Button
            android:id="@+id/prelogin_linute_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans_secondary"
            android:foreground="?android:selectableItemBackground"
            android:padding="28dp"
            android:textStyle="bold"
            android:text="sign in"
            android:textColor="@color/pure_white"
        />

    </LinearLayout>

</FrameLayout>