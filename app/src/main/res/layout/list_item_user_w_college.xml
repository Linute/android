<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/search_users_list_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:orientation="horizontal">

    <com.linute.linute.UtilsAndHelpers.ProfileImageView
        android:id="@+id/search_users_list_image"
        android:layout_width="@dimen/profile_image_radius"
        android:layout_height="@dimen/profile_image_radius"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_users_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/eighty_black"
            android:textSize="16sp"
            tools:text="fdsf sfsdf sf dsffdsf sfsd asdasd f sf dsffdsf sfs"/>

        <TextView
            android:id="@+id/text_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            tools:text="fdsf sfsdf sf dsffdsf sfsdf sf dsffdsf sfs"/>

    </LinearLayout>

</LinearLayout>