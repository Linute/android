<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="48dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical">


    <com.linute.linute.UtilsAndHelpers.SquareFrameLayout android:id="@+id/frame"
                                                         android:layout_width="120dp"
                                                         android:layout_height="120dp"
                                                         android:layout_gravity="end"
                                                         android:visibility="gone"
    >

        <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/image"
                                                         android:layout_width="120dp"
                                                         android:layout_height="120dp"
                                                         app:riv_corner_radius="2dp"
        />

        <ImageView android:id="@+id/cinema_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top|end"
                   android:src="@drawable/ic_cinema"
        />

    </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

    <TextView android:id="@+id/chat_user_message"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:autoLink="web|email"
              android:background="@drawable/chat_item_me"
              android:padding="12dp"
              android:textColor="@color/pure_white"
              android:textSize="@dimen/body_font_size"
              tools:text="test dfsdf sdf fsdf sdf ddf df "
    />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:layout_gravity="end"
                  android:orientation="horizontal">

        <TextView android:id="@+id/chat_user_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/seperator_color"
                  android:textSize="@dimen/sub_font_size"
                  tools:text="3:00AM"/>

        <ImageView
            android:id="@+id/message_action_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/delivered_chat"
        />

    </LinearLayout>

</LinearLayout>

