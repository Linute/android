<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/mainActivity_drawerLayout"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/mainActivity_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.design.widget.NavigationView android:id="@+id/mainActivity_navigation_view"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="match_parent"
                                                  android:layout_gravity="start"
                                                  android:background="@color/colorPrimary"
                                                  app:headerLayout="@layout/drawer_header"
                                                  app:itemIconTint="@color/white"
                                                  app:itemTextAppearance="@style/NavDrawerTextStyle"
                                                  app:menu="@menu/main_activity_drawer"/>

</android.support.v4.widget.DrawerLayout>