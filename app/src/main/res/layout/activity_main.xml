<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--added toolbar-->
    <include android:id="@+id/mainactivity_toolbar"
             layout="@layout/tool_bar"/>

    <!--add tabs -->
    <com.linute.linute.MainContent.SlidingTab.SlidingTabLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:background="@color/colorPrimary"
                                                               android:elevation="4dp"
                                                               android:id="@+id/mainactivity_tabbar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/mainactivity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"/>

</LinearLayout>