<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECF0F2"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/profilelistitem_event_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image_placeholder"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:layout_margin="@dimen/activity_horizontal_margin"
                  android:layout_toStartOf="@id/profilelistitem_event_image"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilelistitem_event_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/quotation2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activities_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:text="old mcdonald had a sheep, meow meow.."/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/activities_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="yesterday"/>

                <ImageView android:id="@+id/profile_frag_anon_icon"
                           android:layout_width="20dp"
                           android:layout_height="10dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginStart="6dp"
                           android:src="@drawable/ic_anon"
                           android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>