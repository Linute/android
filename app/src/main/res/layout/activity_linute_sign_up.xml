<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.linute.linute.LoginAndSignup.LinuteSignUpActivity">

    <ViewFlipper android:id="@+id/signUp_view_flipper"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">


        <LinearLayout android:id="@+id/signUp_email_form"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="vertical">


            <EditText
                android:id="@+id/signup_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <Button android:id="@+id/signUp_verify_email_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                />

            <ProgressBar
                android:id="@+id/signUp_progress_bar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout android:id="@+id/signUp_verify_form"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="32dp"
                      android:layout_marginRight="32dp"
                      android:gravity="center"
                      android:text="A verification code was sent to:"/>

            <TextView android:id="@+id/signUp_email_confirm_text_view"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="5dp"
                      android:layout_marginLeft="32dp"
                      android:layout_marginRight="32dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center"
                      android:textColor="@android:color/holo_blue_dark"
                      android:textStyle="bold"
                      tools:text="blahblah@cuny.edu"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="32dp"
                      android:layout_marginRight="32dp"
                      android:gravity="center"
                      android:text="Please enter the code below. (Note: The email might have been marked as spam)"/>

            <EditText
                android:id="@+id/signUp_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="24dp"
                android:hint="Verification Code"
                android:inputType="number"
                android:maxLength="16"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>

            <LinearLayout android:id="@+id/signUp_code_verify_buttons"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginLeft="64dp"
                          android:layout_marginRight="64dp"
                          android:orientation="horizontal"
                          android:weightSum="2">

                <Button android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="enterNewEmail"
                        android:text="new email"
                    />

                <Button android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="verifyCode"
                        android:text="Next"
                    />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/signUp_progress_bar2"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/signUp_name_and_password_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/signup_profile_pic_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image_placeholder"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/signup_fname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:hint="@string/first_name_hint"
                    android:inputType="textCapWords"
                    android:maxLength="16"
                    android:maxLines="1"

                    android:singleLine="true"
                    android:textSize="14sp"/>


                <EditText
                    android:id="@+id/signup_lname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:inputType="textCapWords"
                    android:layout_weight="1"
                    android:hint="@string/last_name_hint"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="14sp"/>


            </LinearLayout>


            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>


            <Button
                android:id="@+id/signup_submit_button"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/action_sign_up_short"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/signUp_progress_bar3"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>
