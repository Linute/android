<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground">

    <com.linute.linute.UtilsAndHelpers.ProfileImageView
        android:id="@+id/friendSearchItem_profile_image"
        android:layout_width="48sp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
    />


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
    >

        <TextView android:id="@+id/friendSearchItem_full_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:lines="1"
                  android:textColor="@color/secondaryColor"
                  android:textSize="16sp"
                  tools:text="Fullname lastname"
        />

        <TextView
            android:id="@+id/college_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            tools:text="Tester College"
        />


    </LinearLayout>


    <ImageView
        android:id="@+id/friendSearchItem_add_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:padding="16dp"
        tools:src="@drawable/add_friend"/>

</LinearLayout>