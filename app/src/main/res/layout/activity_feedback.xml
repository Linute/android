<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.linute.linute.MainContent.Settings.DeactivateAccountActivity">

    <include layout="@layout/tool_bar"/>

    <EditText
        android:id="@+id/input_feedback"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@null"
        android:gravity="top"
        android:hint="Tell us at we could do to provide the best experience for you."
        android:inputType="textCapSentences"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_color"/>

    <Button
        android:id="@+id/button_deactivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Send"/>

</LinearLayout>
