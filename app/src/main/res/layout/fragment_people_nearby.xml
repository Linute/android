<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/peopleNearby_profile_image"
            android:layout_width="@dimen/profilefragment_list_item_profile_radius"
            android:layout_height="@dimen/profilefragment_list_item_profile_radius"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:border_color="@color/light_grey"
            app:border_width="1dp"/>

        <ImageView android:id="@+id/peopleNearby_action_button"
                   android:layout_width="@dimen/profilefragment_list_item_profile_radius"
                   android:layout_height="@dimen/profilefragment_list_item_profile_radius"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentTop="true"
                   android:layout_margin="@dimen/activity_horizontal_margin"
                   tools:src="@drawable/add_friend"
            />


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_toEndOf="@id/peopleNearby_profile_image"
                      android:layout_toStartOf="@id/peopleNearby_action_button"
                      android:orientation="vertical">

            <TextView android:id="@+id/peopleNearby_person_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:singleLine="true"
                      android:textColor="@color/user_name_blue"
                      android:textStyle="bold"
                      tools:text="Person Name"
                />

            <TextView android:id="@+id/peopleNearby_distance"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:textSize="12sp"
                      tools:text="1.2 miles away"/>

        </LinearLayout>

    </RelativeLayout>

