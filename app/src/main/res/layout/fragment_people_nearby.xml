<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/pure_white"
              android:orientation="vertical">

    <com.linute.linute.UtilsAndHelpers.SquareFrameLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent">

        <com.synnapps.carouselview.CarouselView android:id="@+id/images"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/seperator_color"
                                                app:autoPlay="false"
                                                app:snap="true"
        />

        <TextView android:id="@+id/distance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top|end"
                  android:layout_margin="@dimen/activity_horizontal_margin"
                  android:background="@drawable/rounded_corner_button"
                  android:paddingBottom="8dp"
                  android:paddingEnd="20dp"
                  android:paddingStart="20dp"
                  android:paddingTop="8dp"
                  android:textColor="@color/pure_white"
                  android:textSize="@dimen/body_font_size"
                  android:textStyle="bold"
                  tools:text="nearby"
        />

    </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/seperator_color"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="-24dp"
                  android:orientation="horizontal">

        <TextView android:id="@+id/name"
                  android:layout_width="0px"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/activity_horizontal_margin"
                  android:layout_marginStart="@dimen/activity_horizontal_margin"
                  android:layout_marginTop="40dp"
                  android:layout_weight="1"
                  android:ellipsize="end"
                  android:textAllCaps="true"
                  android:textColor="@color/secondaryColor"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  tools:text="MIKE HAWK"
        />

        <ImageView android:id="@+id/action_button"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginEnd="@dimen/activity_horizontal_margin"
                   android:src="@drawable/message_friend"
        />
    </LinearLayout>

    <TextView android:id="@+id/school"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:ellipsize="end"
              android:textColor="@color/secondaryColor"
              android:textSize="@dimen/body_font_size"
              tools:text="City college of new york"
    />

    <TextView android:id="@+id/status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp"
              android:layout_marginEnd="@dimen/activity_horizontal_margin"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:layout_marginTop="4dp"
              android:maxLines="5"
              android:textColor="@color/fifty_black"
              android:textSize="@dimen/body_font_size"
              tools:text="test test test testtest test test test "
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:weightSum="100">

        <TextView android:id="@+id/first"
                  android:layout_width="0px"
                  android:layout_height="match_parent"
                  android:layout_weight="25"
                  android:background="@color/twentyfive_black"
                  android:gravity="center"
                  android:lines="1"
                  android:textColor="@color/pure_white"
                  tools:text="first"
        />

        <TextView android:id="@+id/second"
                  android:layout_width="0px"
                  android:layout_height="match_parent"
                  android:layout_weight="25"
                  android:background="@color/fifty_black"
                  android:gravity="center"
                  android:lines="1"
                  android:textColor="@color/pure_white"
                  tools:text="second"
        />

        <TextView android:id="@+id/third"
                  android:layout_width="0px"
                  android:layout_height="match_parent"
                  android:layout_weight="25"
                  android:background="@color/twentyfive_black"
                  android:gravity="center"
                  android:lines="1"
                  android:textColor="@color/pure_white"
                  tools:text="third"
        />

        <TextView android:id="@+id/fourth"
                  android:layout_width="0px"
                  android:layout_height="match_parent"
                  android:layout_weight="25"
                  android:background="@color/fifty_black"
                  android:gravity="center"
                  android:lines="1"
                  android:textColor="@color/pure_white"
                  tools:text="fourth"
        />

    </LinearLayout>
</LinearLayout>
