<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/search_users_list_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/search_users_list_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_user"
        card_view:border="false"
        card_view:border_width="0dp"
        card_view:shadow="false"
        card_view:shadow_color="#8BC34A"
        card_view:shadow_radius="0"/>

    <TextView
        android:id="@+id/search_users_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>

</LinearLayout>