<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_item_bar_height"
    android:orientation="vertical"
    tools:showIn="@layout/feed_detail_image">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/divider_horizontal" />


    <LinearLayout
        android:id="@+id/feed_control_bar_like_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:minWidth="48dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/half_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <CheckBox
            android:id="@+id/postHeart"
            android:layout_width="@dimen/feed_detail_action_size"
            android:layout_height="@dimen/feed_detail_action_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/post_likes_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center" />

        <TextView
            android:id="@+id/postNumHearts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:lines="1"
            android:textColor="@color/twentyfive_black"
            android:textSize="12sp"
            tools:text="237" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_control_bar_comments_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/feed_control_bar_like_button"
        android:gravity="center_vertical"
        android:minWidth="48dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/half_margin">

        <ImageView
            android:id="@+id/postComments"
            android:layout_width="@dimen/feed_detail_action_size"
            android:layout_height="@dimen/feed_detail_action_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/postNumComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:lines="1"
            android:textColor="@color/twentyfive_black"
            android:textSize="12sp"
            tools:text="237" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_control_bar_share_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/feed_control_bar_comments_button"
        android:gravity="center_vertical"
        android:minWidth="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postShare"
            android:layout_width="@dimen/feed_detail_action_size"
            android:layout_height="@dimen/feed_detail_action_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:src="@drawable/ic_share_gray" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/shareProgress"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:visibility="gone"
            app:donut_finished_color="@color/blue_color"
            app:donut_finished_stroke_width="4dp"
            app:donut_max="100"
            app:donut_progress="0"
            app:donut_text_color="@color/blue_color"
            app:donut_text_size="6sp"
            app:donut_unfinished_color="#969696"
            app:donut_unfinished_stroke_width="4dp" />

        <TextView
            android:id="@+id/postNumShares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:lines="1"
            android:textColor="@color/twentyfive_black"
            android:textSize="12sp"
            tools:text="237" />
    </LinearLayout>

    <ImageView
        android:id="@+id/more"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:src="@drawable/ic_hardware_keyboard_control"

        />

</RelativeLayout>