<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rooms_list_linear"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rooms_user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_user"
        app:riv_corner_radius="@dimen/user_icon_corner_radius"
        android:cropToPadding="false"
        android:padding="4dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp">


        <TextView
            android:id="@+id/rooms_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/eighty_black"
            android:textSize="@dimen/header_font_size"
            android:textStyle="bold"
            tools:text="Naomi Test" />


        <TextView
            android:id="@+id/rooms_user_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/fifty_black"
            android:textSize="@dimen/sub_font_size"
            tools:text="Hey there JobHey there JobHey there JobHey there JobHey there Job" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/feed_end_layer"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/room_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="now"
            android:textColor="@color/twentyfive_black"
            android:textSize="@dimen/sub_font_size"
            android:gravity="center_vertical" />

       <!-- <ImageView
            android:id="@+id/room_unread"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/unread_message_blue_circle" />-->

        <ImageView
            android:id="@+id/room_is_muted"
            android:layout_width="16dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_chat_muted"
            android:scaleType="centerInside"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>