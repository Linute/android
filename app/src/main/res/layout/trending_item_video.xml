<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/trending_name_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seperator_color"
    />

    <com.linute.linute.UtilsAndHelpers.SquareFrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seperator_color">
        <View
            android:id="@+id/image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_image_progress_bar"
            android:layout_gravity="center"
            android:indeterminate="true" />

        <com.linute.linute.SquareCamera.SquareImageView
            android:id="@+id/feedDetail_event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <com.linute.linute.UtilsAndHelpers.VideoClasses.ScalableVideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scalableType="centerCrop"/>

        <ImageView
            android:id="@+id/cinema_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_cinema"/>

        <View
            android:id="@+id/feed_detail_hidden_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="#EA294C"
            android:visibility="invisible"/>

    </com.linute.linute.UtilsAndHelpers.SquareFrameLayout>

    <include layout="@layout/feed_detail_action_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/seperator_color"/>

</LinearLayout>